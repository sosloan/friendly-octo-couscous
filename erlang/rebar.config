{erl_opts, [debug_info, {parse_transform, lager_transform}]}.

{deps, [
    {lager, "3.9.2"}
]}.

{shell, [
    {apps, [hft_supervisor]}
]}.

{relx, [
    {release, {hft_supervisor, "1.0.0"},
     [hft_supervisor, sasl]},
    
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},
    
    {dev_mode, true},
    {include_erts, false},
    
    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {relx, [{dev_mode, false},
                {include_erts, true}]}
    ]}
]}.
