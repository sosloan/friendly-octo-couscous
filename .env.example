# Alpaca API Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control!

# Alpaca API Keys (Get from: https://alpaca.markets/)
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here

# Trading Mode: paper (for testing) or live (for production)
# paper - Use paper trading endpoint (https://paper-api.alpaca.markets)
# live - Use live trading endpoint (https://api.alpaca.markets)
ALPACA_MODE=paper

# Optional: Custom endpoints (usually not needed)
# ALPACA_BASE_URL=https://paper-api.alpaca.markets
# ALPACA_DATA_URL=https://data.alpaca.markets

# Netty Server Configuration
HFT_SERVER_PORT=8080

# TLS/SSL Configuration (for production)
# TLS_ENABLED=true
# TLS_CERT_PATH=/path/to/certificate.crt
# TLS_KEY_PATH=/path/to/private.key
# TLS_KEY_PASSWORD=your_key_password

# Security Configuration
# ALLOWED_IPS=127.0.0.1,192.168.1.0/24
# MAX_CONNECTIONS=1000
# RATE_LIMIT_PER_SECOND=100
