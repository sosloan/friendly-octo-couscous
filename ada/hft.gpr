-- Ada Build Configuration
project HFT is
   for Source_Dirs use (".");
   for Object_Dir use "obj";
   for Main use ("hft_main.adb", "hft_test.adb", "hft_compliance_test.adb", 
                 "compliance_example.adb", "hft_integration_test.adb", "hft_benchmark.adb");
   
   package Compiler is
      for Default_Switches ("Ada") use ("-gnatwa", "-O2", "-gnat2022");
   end Compiler;
   
   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;
end HFT;
